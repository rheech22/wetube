mixin videoPlayer(video = {})
     .videoPlayer#jsVideoPlayer(tabindex="0")
         video(src=video.src, autoplay)
         .videoPlayer__controls
            .videoPlayer__progress
                .videoPlayer__progress--filled
            .videoPlayer__play-part
                span#jsPlayButton
                    i.fas.fa-pause
            .videoPlayer__volume-part
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                input.videoPlayer__volume#jsVolume(type="range", min="0" max="1" value="0.5" step="0.01")
            .videoPlayer__time-part
                span.videoPlayer__time
                    span#currentTime 00:00 
                    span=" / "
                    span#totalTime 00:00 
            .videoPlayer__screen-part
                span#jsFullScreen
                    i.fas.fa-expand